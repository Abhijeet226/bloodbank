<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_month"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="10dp"
        android:text="Month"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/iv_in"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/tv_month"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/tv_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="10dp"
        android:layout_below="@+id/tv_month"
        android:layout_toRightOf="@id/iv_in"
        android:text="bldin"
        android:layout_above="@+id/iv_out" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:padding="15dp"
        android:id="@+id/iv_out"
        android:layout_below="@+id/iv_in"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="0dp"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_out"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="10dp"
        android:text="bldout"
        android:layout_below="@id/tv_in"
        android:layout_toRightOf="@+id/iv_out"
        android:layout_alignBottom="@+id/iv_out" />
</RelativeLayout>
