<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_month"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_monthhead"


        />
    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Received"
        android:layout_toRightOf="@+id/tv_month"
        android:id="@+id/tv_bldin"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"

        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tv_bldin"
        android:id="@+id/iv_bldin"
        android:foregroundGravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="65dp"

        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Distributed"
        android:layout_toRightOf="@+id/iv_bldin"
        android:layout_alignLeft="@+id/tv_Received"
        android:id="@+id/tv_bldout"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"

        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tv_bldout"
        android:id="@+id/iv_bldout"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"

        />
</RelativeLayout>
